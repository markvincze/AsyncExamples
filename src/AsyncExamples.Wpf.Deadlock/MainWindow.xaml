<Window x:Class="AsyncExamples.Wpf.Deadlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncExamples.Wpf.Deadlock"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500" FontSize="32">
    <StackPanel Orientation="Vertical">
        <Button Name="btnExecute" Content="Execute work!" Margin="12" Click="btnExecute_Click" />
        <TextBlock Name="tbResult" Grid.Row="1" Margin="12" />
    </StackPanel>
</Window>
