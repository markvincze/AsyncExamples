<Window x:Class="AsyncExamples.Wpf.NoThreadTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncExamples.Wpf.NoThreadTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="32">
    <StackPanel Orientation="Vertical">
        <Button Content="Get input from user" Name="btnGetInput" Margin="12" Padding="12" Click="btnGetInput_Click" />
        <StackPanel Orientation="Horizontal" Margin="12">
            <Label Content="Input from user: " />
            <Label Name="lblInput" />
        </StackPanel>
    </StackPanel>
</Window>
