<Window x:Class="AsyncExamples.Wpf.NoThreadTask.StringInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncExamples.Wpf"
        mc:Ignorable="d"
        Title="StringInputWindow" Width="500" Height="200" FontSize="32">
    <StackPanel Orientation="Vertical">
        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Input" />
            <TextBox Name="tbInput" Grid.Column="1" />
        </Grid>
        <Grid>
            <Button Name="btnOk" Content="OK" Margin="12" Click="btnOk_Click" />
        </Grid>
    </StackPanel>
</Window>
